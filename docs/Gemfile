source "https://rubygems.org"

# GitHub Pages bundle (pins Jekyll and supported plugins to the Pages environment)
gem "github-pages", "~> 228", group: :jekyll_plugins

# Plugins (overridable but compatible with github-pages constraints)
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
end

# Local development server dependency (not bundled with Ruby 3 by default)
gem "webrick", "~> 1.8"

# Windows and JRuby compatibility
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Performance booster for watching directories on Windows
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]

# Lock `http_parser.rb` gem to `v0.6.x` on JRuby builds since newer versions of the gem
# do not have a Java counterpart.
gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]